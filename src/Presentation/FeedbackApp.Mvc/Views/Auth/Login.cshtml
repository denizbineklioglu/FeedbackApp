@model FeedbackApp.DataTransferObjects.Requests.UserLoginRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Modern Flat Design Login Form Example</title>
    <link rel="stylesheet" href="./style.css">
    <style>

        .login-page {
            width: 360px;
            padding: 8% 0 0;
            margin: auto;
        }

        .form {
            position: relative;
            z-index: 1;
            background: #b94d32;
            max-width: 360px;
            margin: 0 auto 100px;
            padding: 45px;
            text-align: center;
            box-shadow: #b94d32;
        }

            .form input {
                font-family: "Roboto", sans-serif;
                outline: 0;
                background: url(../images/bg3.jpg);
                width: 100%;
                border: 0;
                margin: 0 0 15px;
                padding: 15px;
                box-sizing: border-box;
                font-size: 14px;
            }

            .form button {
                font-family: "Roboto", sans-serif;
                text-transform: uppercase;
                outline: 0;
                background: url(../images/bg3.jpg);
                width: 100%;
                border: 0;
                padding: 15px;
                color: #b94d32;
                font-size: 14px;
                -webkit-transition: all 0.3 ease;
                transition: all 0.3 ease;
                cursor: pointer;
            }

                .form button:hover, .form button:active, .form button:focus {
                    background: #43A047;
                }

            .form .message {
                margin: 15px 0 0;
                color: #b3b3b3;
                font-size: 12px;
            }

                .form .message a {
                    color: wheat;
                    text-decoration: none;
                }

            .form .register-form {
                display: none;
            }

        .container {
            position: relative;
            z-index: 1;
            max-width: 300px;
            margin: 0 auto;
        }

            .container:before, .container:after {
                content: "";
                display: block;
                clear: both;
            }

            .container .info {
                margin: 50px auto;
                text-align: center;
            }

                .container .info h1 {
                    margin: 0 0 15px;
                    padding: 0;
                    font-size: 36px;
                    font-weight: 300;
                    color: #1a1a1a;
                }

                .container .info span {
                    color: #4d4d4d;
                    font-size: 12px;
                }

                    .container .info span a {
                        color: #000000;
                        text-decoration: none;
                    }

                    .container .info span .fa {
                        color: #EF3B3A;
                    }

        body {
            background: url(../images/bg3.jpg);
            background: url(../images/bg3.jpg);
            background: url(../images/bg3.jpg);
            background: url(../images/bg3.jpg);
            font-family: "Roboto", sans-serif;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }
    </style>

</head>
<body>
    <div class="login-page">
        <hr />
        <h3 style="display: flex; justify-content: center; color: #b94d32">Giriş Yap</h3>
        <hr />
        <div class="form">
            <form class="login-form" asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl">
                <input type="text" placeholder="email" asp-for="Email" type="email" class="form-control" required />
                <input type="password" placeholder="password" asp-for="Password" type="password" class="form-control" required />
                <input type="submit" value="Giriş Yap" class="btn btn-primary" style="color: #b94d32" />
                <div>
                    <a asp-controller="Auth" asp-action="Register" style="display: flex; justify-content: center; color: #e7e2cf">Üye değil misiniz?. Şimdi Üye Olun.</a>
                </div>
            </form>
        </div>
    </div>
    <!-- partial -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="./script.js"></script>

</body>
</html>

